<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================= -->
<!-- Application: Book Bugs E-book Order Application -->
<!-- Activity:    ActMain -->
<!-- ============================================================= -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ActMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_orange_light"
        >

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 1: book selection -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Books"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:text="Book Options"
                android:textAllCaps="false"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:onClick="showBookListDialogBox"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 2: Customer name -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Name"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtCustomerName"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 3: Customer e-mail -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="E-mail"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtCustomerEmail"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 4: Book selected -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Book Selected"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtBookSelected"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:focusable="false"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 5: Book cost -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Book Cost $"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtBookCost"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:focusable="false"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 6: Tax -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Tax $"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtTaxCost"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:focusable="false"
                />

        </LinearLayout>

        <!-- row 7: Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Total $"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/txtTotalCost"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                tools:text="text"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:focusable="false"
                />

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- row 8: Payment type -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black"
                android:text="Payment Types"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/holo_orange_light"
                >
                <RadioGroup
                    android:id="@+id/rdGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <RadioButton
                        android:id="@+id/rbPayPal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:padding="8dp"
                        android:text="PayPal"
                        android:textColor="@android:color/black"
                        android:fontFamily="Courier New"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                    <RadioButton
                        android:id="@+id/rbCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:padding="8dp"
                        android:text="Credit Card"
                        android:textColor="@android:color/black"
                        android:fontFamily="Courier New"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rbDebitCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:padding="8dp"
                        android:text="Debit Card"
                        android:textColor="@android:color/black"
                        android:fontFamily="Courier New"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- Row 9 submit and rest row -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/holo_orange_light"
            >

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/white"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Submit"
                android:onClick="onSubmitButtonClicked"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/white"
                android:fontFamily="Courier New"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Reset"
                android:onClick="onResetButtonClicked"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>